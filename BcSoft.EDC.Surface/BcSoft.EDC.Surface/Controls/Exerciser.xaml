<UserControl x:Class="BcSoft.EDC.Surface.Controls.Exerciser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BcSoft.EDC.Surface.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="600">
    <Canvas>
        <Ellipse x:Name="ElBoundary" Width="600" 
                 Height="600" Canvas.Left="0" 
                 Canvas.Top="0" Fill="Transparent"/>
        <Image x:Name="Cycle" 
               Source="/BcSoft.EDC.Surface;component/Images/ExerciserBackground.png" 
               Width="160" Height="160"
               Canvas.Top="220" Canvas.Left="220"/>
        <Image x:Name="ImgDrag" 
               Source="/BcSoft.EDC.Surface;component/Images/Exerciser.png"
               Width="74" Height="74"
               Canvas.Left="263"
               Canvas.Top="263" MouseDown="ImgDrag_MouseDown" MouseUp="ImgDrag_MouseUp" 
               MouseMove="ImgDrag_MouseMove"/>
    </Canvas>
</UserControl>
